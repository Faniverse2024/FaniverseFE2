<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그림자 부분 -->
    <item android:left="2dp" android:right="2dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000"/> <!-- 반투명 검정으로 그림자 효과 -->
            <corners android:radius="8dp"/> <!-- 모서리를 둥글게 -->
        </shape>
    </item>

    <!-- 실제 배경 부분 (보라색 테두리와 흰색 배경) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/> <!-- 흰색 배경 -->
            <corners android:radius="8dp"/> <!-- 모서리를 둥글게 -->

            <!-- 보라색 테두리 -->
            <stroke
                android:width="4dp"
                android:color="#c99ad1"/> <!-- 보라색 테두리 -->
        </shape>
    </item>

</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/text_phone_login"
        android:layout_width="87dp"
        android:layout_height="23dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:textSize="15sp"
        android:textStyle="normal"
        android:gravity="center"
        android:letterSpacing="-0.01"
        android:text="휴대폰 로그인"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/text_enter_code"
        android:layout_width="225dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:letterSpacing="-0.01"
        android:text="인증번호를 입력해주세요"
        android:textColor="#000000" />

    <View
        android:id="@+id/line_1"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="138.5dp"
        android:layout_marginStart="11dp"
        android:background="#858585" />

    <View
        android:id="@+id/line_2"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="193.5dp"
        android:layout_marginStart="11dp"
        android:background="#858585" />

    <TextView
        android:id="@+id/text_sent_code"
        android:layout_width="227dp"
        android:layout_height="20dp"
        android:layout_marginTop="113dp"
        android:layout_marginStart="12dp"
        android:textSize="13sp"
        android:textStyle="normal"
        android:letterSpacing="-0.01"
        android:text="010-0000-0000에 인증번호를 보냈어요!"
        android:textColor="#858585" />

    <TextView
        android:id="@+id/text_6_digit"
        android:layout_width="59dp"
        android:layout_height="20dp"
        android:layout_marginTop="168dp"
        android:layout_marginStart="12dp"
        android:textSize="13sp"
        android:textStyle="normal"
        android:letterSpacing="-0.01"
        android:text="6자리 숫자"
        android:textColor="#858585" />

    <TextView
        android:id="@+id/text_timer"
        android:layout_width="36dp"
        android:layout_height="20dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="12dp"
        android:textSize="13sp"
        android:textStyle="normal"
        android:letterSpacing="-0.01"
        android:text="03:00"
        android:textColor="#000000"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/text_code_label"
        android:layout_width="48dp"
        android:layout_height="20dp"
        android:layout_marginTop="144dp"
        android:layout_marginStart="11dp"
        android:textSize="13sp"
        android:textStyle="normal"
        android:letterSpacing="-0.01"
        android:text="인증번호"
        android:textColor="#5A5A5A" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="342dp"
        android:layout_height="55dp"
        android:layout_marginTop="740dp"
        android:layout_centerHorizontal="true"
        android:text="로그인 하기"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/phone_number_container"
        android:layout_width="77dp"
        android:layout_height="31dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="12dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/text_phone_number_label"
            android:layout_width="46dp"
            android:layout_height="18dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="휴대폰 번호"
            android:textColor="#828282"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>

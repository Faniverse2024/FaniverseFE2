<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AfterSearchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back"
            android:contentDescription="Back button" />

        <TextView
            android:id="@+id/chatHomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 대화"
            android:textSize="20sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-medium" />

    </RelativeLayout>


    <!-- 검색 결과 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="5dp"
        android:padding="3dp" />

    <!-- 하단 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">

        <!-- 홈 -->
        <LinearLayout
            android:id="@+id/home_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_home" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="홈"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- 관심 -->
        <LinearLayout
            android:id="@+id/interest_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_interest" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="관심"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- 커뮤니티 -->
        <LinearLayout
            android:id="@+id/community_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_community" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="커뮤니티"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- 채팅 -->
        <LinearLayout
            android:id="@+id/chat_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chat" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="채팅"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- 마이페이지 -->
        <LinearLayout
            android:id="@+id/mypage_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_mypage" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="마이페이지"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- 필터 배경 -->
    <RelativeLayout
        android:id="@+id/filter_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/filter_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색 필터"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/high_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="높은 가격 순"
                android:textSize="14sp"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/low_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="낮은 가격 순"
                android:textSize="14sp"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/latest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="최신 순"
                android:textSize="14sp"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/most_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="찜 많은 순"
                android:textSize="14sp"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/close_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="닫기"
                android:textSize="14sp"
                android:padding="16dp"
                android:background="?android:attr/selectableItemBackground"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
